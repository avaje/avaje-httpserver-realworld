<assembly>
    <id>distribution</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>server</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly</directory> <!-- Directory where your script is stored -->
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>server.sh</include>
            </includes>
            <fileMode>0755</fileMode> <!-- Make the script executable -->
        </fileSet>
    </fileSets>
</assembly>